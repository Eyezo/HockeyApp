<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorDark"
    tools:context=".OpponentList">


    <fragment
        android:id="@+id/oppListFrag"
        android:name="com.example.eyezo.hockeyapp.OppListFrag"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_opp_list" />
    <fragment
        android:id="@+id/teamListFrag"
        android:name="com.example.eyezo.hockeyapp.TeamListFrag"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_team_list"/>

</LinearLayout>